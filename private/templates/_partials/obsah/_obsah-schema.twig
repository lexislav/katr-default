{% if entry.schemata|length > 1 %}
    {% set closure = " mm-closed" %}
{% else %}
    {% set closure = "" %}
{% endif %}

{% for schema in entry.schemata %}
    <div class="m-schema bg-grey-light mm-pad-top-half mm-pad-bottom-half mm-mgr-bottom-tiny{{ closure }}" closable>

        <div class="row">

            <div class="column small-11">
                <h2 class="f-xl f-800 f-up">{{ schema.schemaTitle }}</h2>
            </div>
            <div class="column small-1 text-right">
                <div class="f-xl f-800 f-up" closable-close-button><i class="fa fa-angle-down"></i></div>
            </div>
        </div>

        <div class="row mm-pad-bottom mm-pad-top-half" closable-content>
            {% if schema.schemaImage|length > 0 %}
                {% if schema.schemaImage.first.width > schema.schemaImage.first.height %}

                        <div class="columns small-12 mm-pad-bottom text-center">
                            <img src="{{ schema.schemaImage.first.getUrl() }}">
                        </div>
                        <div class="columns small-6">
                            {{ schema.schemaDescription }}
                        </div>
                        <div class="columns small-6">
                            {{ schema.schemaNote }}
                        </div>

                {% else %}

                        <div class="columns small-6">
                            {{ schema.schemaDescription }}
                            {{ schema.schemaNote }}
                        </div>
                        <div class="columns small-6 text-center">
                            <img src="{{ schema.schemaImage.first.getUrl() }}">
                        </div>

                {% endif %}
            {% endif %}
        </div>

    </div>
{% endfor %}
