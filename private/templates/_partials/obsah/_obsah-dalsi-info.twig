<div class="row mm-pad-top">
    <div class="column">
        {% if entry.infoblockTitle %}
            <h2>{{ entry.infoblockTitle }}</h2>
        {% else %}
            <h2>Další informace</h2>
        {% endif %}
    </div>
</div>

<div class="m-info">

    {# accordeon for mobile only#}
    <div class="hide-for-large">

        <ul class="accordion koma-content mm-pad-bottom" data-accordion data-multi-expand="true" data-allow-all-closed="true">
            {% for i in entry.doplnkoveInformace %}
                <li class="accordion-item" data-accordion-item>
                    <a class="accordion-title"><h2 class="f-xl f-800">{{ i.infoTitle }}</h2></a>
                    <div class="accordion-content" data-tab-content>
                        {% if i.infoImage|length > 0 %}
                            {% for im in i.infoImage %}
                                <img src="{{ im.getUrl('otherInfoImage') }}">
                            {% endfor %}
                        {% endif %}
                        {{ i.infoBody }}
                    </div>
                </li>
            {% endfor %}
        </ul>

    </div>

    {# grid for desktop #}

    <div class="show-for-large">

        <div class="row">
            {% for i in entry.doplnkoveInformace %}
                {% if i.infoImage|length > 0 %}
                    {# s obrazky#}
                    <div class="column small-12 large-12">
                        <div class="row m-info--panel mm-pad-bottom">
                            <div class="large-6 large-order-1 column">
                                <img src="{{ i.infoImage.first.getUrl('otherInfoImage') }}">
                            </div>
                            <div class="large-6 large-order-2 column">
                                <h2 class="m-info--headline f-xl f-800">{{ i.infoTitle }}</h2>
                                {{ i.infoBody }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    {# bez obrazku#}
                    <div class="column small-12 large-6 ">
                        <div class=" m-info--panel mm-pad-bottom">
                            <h2 class="m-info--headline f-xl f-800">{{ i.infoTitle }}</h2>
                            {{ i.infoBody }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

</div>
