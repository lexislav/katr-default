{# taby #}

<div class="m-tabs">

    <ul class="tabs" data-tabs id="example-tabs">
        <li class="tabs-title is-active"><a href="#panel1" aria-selected="true"><i class="fa fa-random"></i> Oznámení</a></li>
        <li class="tabs-title"><a href="#panel2"><i class="fa fa-random"></i> FAQ</a></li>
    </ul>

    <div class="tabs-content" data-tabs-content="example-tabs">


        <div class="tabs-panel mm-pad-bottom mm-pad-top is-active" id="panel1">
            <div class="row align-center">
                <div class="columns small-5">
                    <h3 class="f-xl f-800">Oznámení</h3>
                </div>
                <div class="columns small-5">
                    {% for entry in craft.entries.section('oznameni').limit(10) %}
                    <article>
                        <div class="row">
                            <div class="column small-3">
                                {{ entry.postDate.format('F d, Y') }}
                            </div>

                            <div class="">

                            <h1><a href="{{ entry.url }}">{{ entry.title }}</a></h1>
                            </div>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </div>

        </div>

        <div class="tabs-panel mm-pad-bottom mm-pad-top" id="panel2">
            <div class="row align-center">
                <div class="columns small-5">
                    <h3 class="f-xl f-800">FAQ</h3>
                </div>
                <div class="columns small-5">
                    <p>Sekce FAQ je zatím prázdná.</p>
                </div>
            </div>


        </div>

    </div>
</div>
