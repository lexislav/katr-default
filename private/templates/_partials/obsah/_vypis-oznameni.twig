<div class="m-oznameni">

    {% for entry in craft.entries.section('oznameni').find() %}

        {# TODO: tahle podmínka shodí web, pokud se na to dostane nezalogovany user #}
        {% if entry.forEditors and currentUser.groups != "users " %}

            <article class=" mm-pad-bottom-half mm-pad-top-half">
                <div class="row">
                    <div class="column small-2 small-offset-1">
                        <div class="f-400 f-xs">{{ entry.postDate.format('F d, Y') }}</div>
                    </div>
                    <div class="columns small-8">
                        <h1 class="f-400 f-m"><a href="{{ entry.url }}">{{ entry.title }}</a>*</h1>
                    </div>
                </div>
            </article>

        {% else %}

            <article class=" mm-pad-bottom-half mm-pad-top-half">
                <div class="row">
                    <div class="column small-2 small-offset-1">
                        <div class="f-400 f-xs">{{ entry.postDate.format('F d, Y') }}</div>
                    </div>
                    <div class="columns small-8">
                        <h1 class="f-400 f-m"><a href="{{ entry.url }}">{{ entry.title }}</a></h1>
                    </div>
                </div>
            </article>

        {% endif %}
    {% endfor %}

</div>
