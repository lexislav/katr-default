<header>
    <div class="row">

        <div class="small-12 medium-6 columns">
            <h1>{{ entry.title }}</h1>
            <div>Revize: {{ entry.dateUpdated|date("d.F Y") }}</div>
            {#{% include "/_partials/obsah/_obsah-header-meta.twig" %}#}
        </div>

        {% if entry.uvodniObrazek %}
            <div class="small-12 medium-6 columns">
                {% for i in entry.uvodniObrazek %}
                    <img src="{{ i.getUrl('headerHalfImage') }}">
                {% endfor %}
                <div class="button secondary big"><i class="fa fa-2x fa-image"></i></div>
            </div>
        {% endif %}

    </div>
</header>

