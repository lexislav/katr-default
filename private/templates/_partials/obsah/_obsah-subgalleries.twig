{% for subgallery in entry.doplkoveGalerie %}

{% set colSize = 'small-2' %}
{% set thumbSize = 'ogThumbSmall' %}

{% if subgallery.typGalerie == "hugeGallery" %}
    {% set colSize = 'small-3' %}
    {% set thumbSize = 'ogThumbLarge' %}
{% endif %}

    <div class="bg-grey-light mm-pad-top-half mm-pad-bottom-half">
        <div class="row">
            <div class="column small-12">
                <h2 class="f-xl f-800 mm-pad-bottom-half">{{ subgallery.galleryTitle }}</h2>
            </div>
        </div>
        <div class="row">
            {% for i in subgallery.images %}
                <div class="columns  mm-pad-bottom-half debug {{ colSize }}">
                    <div class="">
                        <img src="{{ i.getUrl(thumbSize) }}" alt="{{ i.filename }}">
                        <div class="">
                            {{ i.title }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}
