<footer class="bg-primary c-white mm-link-notunderline">


    {# base footer #}
    <div class="m-section_footer">

        <div class="row m-section_footer-first-line">
            <div class="medium-6 columns">
                <div class="logo">
                    <img src="/template/assets/logo-koma-modular-inline-white.svg" alt="">
                </div>
            </div>
            <div class="medium-6 columns text-right">
                {% for sm_link in socialniMedia.pevnyOdkaz %}
                    <a href="{{sm_link.linkUrl}}" title="{{sm_link.linkUrl}}"><i class="{{sm_link.linkClasses}}"></i></a>
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="medium-6 columns">
                {% if currentUser %}
                <div>{{footer.body}}</div>
                {% else %}
                <div><p>KOMA MODULAR je leader ve výrobě modulárních staveb.<br>
                    Používáním katalogu souhlasíte s&nbsp;<a href="/podminky-uziti">Podmínkami užívání katalogu</a.</p></div>
                {% endif %}
            </div>
            <div class="medium-6 columns text-right">
                <a href="http://www.koma-modular.cz" title="KOMA Modular">KOMA Modular</a>
            </div>
        </div>
    </div>

    {# copyrights #}
    <div class="bg-primary-dark c-white m-section_copyright">
        <div class="row">
            <div class="small-6  columns">
                © KOMA Modular 2016
            </div>
            <div class="small-6 columns text-right">
                <a href="http://www.odoka.cz" title="">vytvořeno -oo-</a>
            </div>
        </div>
    </div>


</footer>
