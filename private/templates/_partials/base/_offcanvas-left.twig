<div class="off-canvas position-left" id="offCanvasLeft" data-off-canvas>
    <div class="row off-canvas-header align-middle">
        <div class="column">Koma katalog</div>
        <div class="column shrink text-right">
            <button class="menu-icon" type="button" data-close="offCanvasLeft"></button>
        </div>
    </div>
    <div class="off-canvas-scroll-content">
        <div class="row ">
            <div class="column">
                {% for i in range(1, 3) %}
                    <a class="row off-canvas-item" href="#">
                        <div class="small-2 column off-canvas-item--icon"><i class="fa fa-amazon"></i></div>

                        <div class="small-10 column">
                            <h3 class="off-canvas-item--headline">Katalog - {{ i }} </h3>
                            <div> Procházení struktury katalogu, obecných informací o skupinách produktů</div>
                        </div>
                    </a>
                    <a class="row off-canvas-item disabled" href="#">
                        <div class="small-2 column off-canvas-item--icon"><i class="fa fa-youtube"></i></div>

                        <div class="small-10 column">
                            <h3 class="off-canvas-item--headline">Katalog - {{ i }} </h3>
                            <div> Procházení struktury katalogu, obecných informací o skupinách produktů</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row off-canvas-footer align-middle">
        <div class="column text-center"><i class="fa fa-paper-plane-o"></i>koma modular</div>
        <div class="column text-center"><a href="/" title=""><i class="fa fa-paper-plane-o"></i>kontaktujte nás</a>
        </div>
    </div>

</div>
