{#
Breadrumbs
class:
    m-breadcrumbs
modifiers:
    mm-over - pruhledne přes obsah (absolutni pozice)
#}

<nav aria-label="You are here:" role="navigation" class="m-breadcrumbs {{ class|default('') }}">
    <ul class="breadcrumbs">
        <li><a href="{{ siteUrl }}">Úvod</a></li>

        {% for crumb in entry.getAncestors() %}
            <li>{{ crumb.getLink() }}</li>
        {% endfor %}

        <li>{{ entry.title() }}</li>
    </ul>
</nav>
