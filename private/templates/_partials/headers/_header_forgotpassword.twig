<div style="background-image: url(/template/assets/metal-construction-profiles-01.jpg)" class="m-header" mod-screen-height>

    <div class="row align-middle mm-pad-top">
        <div class="columns small-5 small-offset-1">
            <a href="{{ siteUrl }}" title="{{'Katalog technických řešení'|t }}"><img src="/template/assets/logo-koma-modular.svg" alt="KOMA logo"></a>
        </div>
        <div class="columns small-5 small-pull-2">
                <ul class="dropdown menu menu-language" data-dropdown-menu>
                    <li>
                        <a href="">Language <i class="fa fa-2x fa-angle-down" style="vertical-align: middle;"></i></a>
                        <ul class="menu">
                            <li><a href="#">Česky</a></li>
                            <li><a href="#">Anglicky</a></li>
                        </ul>
                    </li>
                </ul>
        </div>
    </div>

    {#headline#}
    <div class="row align-center">
        <div class="small-8 columns text-center">
            <h1 class="f-xxl">{% if errors is defined %}
                {% for errorMessage in errors %}{{ errorMessage }} {% endfor %}
            {% else %}
                {{ "Zapomněli jste heslo?"|t }}
            </h1>
            {% endif %}
        </div>
    </div>


    {# form #}
    {# TODO: Mich- doladit formulář na zapomenuté heslo #}
    <form method="post" accept-charset="UTF-8">
        {{ getCsrfInput() }}
        <input type="hidden" name="action" value="users/forgotPassword">
        <input type="hidden" name="redirect" value="">

        <div class="row align-center">
            <div class="small-10 medium-6 large-4 columns">
                <h3><label for="loginName">Zadejte své uživatelské jméno nebo email</label></h3>
                <input id="loginName" type="text" name="loginName" value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.session.rememberedUsername }}{% endif %}" placeholder="{{ "Uživatelské jméno"|t }}" required>
            </div>
        </div>

        <div class="row align-center">
            <div class="small-4 columns text-center">
                <input type="submit" value="Odeslat" class="large button">
                {# {% if errors is defined %}
                    {% for errorMessage in errors %}
                        <p class="m-header-errmsg f-m mm-pad-top-half">{{ errorMessage }}</p>
                    {% endfor %}
                {% endif %} #}
            </div>
        </div>
    </form>
    <div class="m-header-anchors">
        <div class="m-item"><a href="{{siteUrl}}" title="{{'Zpět na vstupní stránku'|t}}">{{'Zpět na vstupní stránku'|t}}</div></a>
    </div>

</div><a id="top-offset"></a>
