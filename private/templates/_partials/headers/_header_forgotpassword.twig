<div style="background-image: url(/template/assets/metal-construction-profiles-01.jpg)" class="m-header" mod-screen-height>

    <div class="row align-middle mm-pad-top">
        <div class="columns small-5 small-offset-1">
            <img src="/template/assets/logo-koma-modular.svg" alt="">
        </div>
        <div class="columns small-5 small-pull-2">
                {# TODO: Mich- dodělat dropdown na jazyky #}
                <ul class="dropdown menu menu-language" data-dropdown-menu>
                    <li>
                        <a href="">Language <i class="fa fa-2x fa-angle-down" style="vertical-align: middle;"></i></a>
                        <ul class="menu">
                            <li><a href="#">Česky</a></li>
                            <li><a href="#">Anglicky</a></li>
                        </ul>
                    </li>
                </ul>
        </div>
    </div>

    {#headline#}
    <div class="row align-center">
        <div class="small-8 columns text-center">
            <h1 class="f-xxl">{{ "Zapomněli jste heslo?"|t }}</h1>
        </div>
    </div>


    {# form #}
    <form method="post" accept-charset="UTF-8">
        {{ getCsrfInput() }}
        <input type="hidden" name="action" value="users/forgotPassword">
        <input type="hidden" name="redirect" value="">

        <h3><label for="loginName">Username or email</label></h3>
        <input id="loginName" type="text" name="loginName"
            value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.session.rememberedUsername }}{% endif %}">

        {% if errors is defined %}
            <ul class="errors">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <input type="submit" value="Submit">
    </form>

    <div class="m-header-anchors">
        <div class="m-item">Další informace</div>
        <div class="m-item mm-button" scroll-top-offset><img src="/template/assets/circle-button-down.png" alt=""></div>
        <div class="m-item">Žádost o registraci</div>
    </div>

</div><a id="top-offset"></a>
