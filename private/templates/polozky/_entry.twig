{% extends "/_partials/layout/_base.twig" %}

{% block content %}
    {% cache globally %}
    {% include '/_partials/base/_top-breadcrumbs.twig' %}

    <article>
        {% include "/_partials/obsah/_obsah-header.twig" with {"headerType": "default"} %}

        {# specifikace #}
        {% include "/_partials/obsah/_obsah-tech-specifikace.twig" %}

        {# body, tabulky, řady#}
        {% include "/_partials/obsah/_obsah-body.twig" %}

        {# default gallery#}
        {% include "/_partials/obsah/_obsah-fotogalerie.twig" %}

        {# schemata #}
        {% include "/_partials/obsah/_obsah-schema.twig" %}

        {# subgallerie #}
        {% include "/_partials/obsah/_obsah-subgalleries.twig" %}

        {# doplnkove informace #}
        {% if entry.doplnkoveInformace|length > 0 %}
            {% include "/_partials/obsah/_obsah-dalsi-info.twig" %}
        {% endif %}

        {# nahoru #}
        {% include "/_partials/base/_nav-top.twig" %}


    </article>

    {% include "/_partials/obsah/_obsah-upozorneni.twig" %}
    
    {% endcache %}
{% endblock %}
