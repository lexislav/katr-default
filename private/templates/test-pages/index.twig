{% extends "/_partials/layout/_base.twig" %}

{# posila se prazdny auth block kuli codekitu#}
{% block user_autenth %}{% endblock user_autenth %}

{% block bars %}
    {% include "/_partials/base/_top-title-bar.twig" %}
    {% include "/_partials/base/_top-bar.twig" %}
{% endblock %}

{% block content %}

    {% include '/_partials/base/_top-breadcrumbs.twig' %}

    <article>
        {% include "/_partials/obsah/_obsah-header.twig" %}
        {% include "/_partials/obsah/_obsah-fotogalerie.twig" %}

        {% include "/_partials/obsah/_obsah-schema.twig" %}
        {% include "/_partials/obsah/_obsah-vzory.twig" %}

        {# podmínka pro spuštění bloku Doplňkévých informací #}
        {% if entry.doplnkoveInformace %}

            <div class="row">
                <div class="column">
                    <h2>Další informace</h2>
                </div>
            </div>


            {# accordeon for mobile only#}
            <div class="hide-for-large">
                {% include "/_partials/obsah/_obsah-dalsi-info-accordeon.twig" %}
            </div>

            {# grid for desktop #}
            <div class="show-for-large">
                {% include "/_partials/obsah/_obsah-dalsi-info.twig" %}
            </div>

        {% endif %}

        <div class="m-section">
            <div class="row">
                <div class="column text-center">
                    <a href="">nahoru</a>
                </div>
            </div>
        </div>

        {% include "/_partials/obsah/_obsah-upozorneni.twig" %}

    </article>

{% endblock %}

{% block scripts %}{% endblock %}
