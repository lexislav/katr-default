{#
 # KATALOG listing
 # ---------------
 #
 # Šablona vypisuje strukturu katalogu
 #
 # dost možná nebude vůbec potřeba, protože tato data se budou načítat do modalu
 #}

{% extends "/_partials/layout/_base.twig" %}

{% block content %}

    {# {% include '/_partials/base/_top-breadcrumbs.twig' with {'class': 'mm-over'} %} #}

    {% set pages = craft.entries.section('katalog') %}

    {# TODO: udělat markup - struktura katalogu do modalu či čeho. #}


    <p><a data-open="katalogModal">Open katalog modal</a></p>

    <div class="full reveal" id="katalogModal" data-reveal>


        {# tohle vyžaduje hacknutý Foundation JS file#}
        <nav class="m-katalog">
            <ul class="vertical menu" data-drilldown>

                {% nav page in pages %}
                <li>
                    <div class="m-katalog--item">
                        <a class="m-katalog--item-link" href="{{ page.url }}">{{ page.title }}</a>
                        <div class="m-katalog--item-next"><i class="fa fa-angle-right"></i></div>
                        <div class="m-katalog--item-content">
                            <a href="{{ page.url }}" class="extra-link"><i class="fa fa-file-text"></i></a></div>
                    </div>
                    {% ifchildren %}
                    <ul class="vertical menu">
                        {% children %}
                    </ul>
                    {% endifchildren %}
                </li>
                {% endnav %}

            </ul>
        </nav>

        <div></div>

        <button class="close-button" data-close aria-label="Close reveal" type="button">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>

    {% include "/_partials/obsah/_obsah-upozorneni.twig" %}

{% endblock %}
